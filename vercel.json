{
  "version": 2,
  "name": "three-pages",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "apps/web/dist"
      }
    }
  ],
  "buildCommand": "cd apps/web && pnpm install && pnpm run build",
  "devCommand": "cd apps/web && pnpm run dev",
  "installCommand": "pnpm install",
  "outputDirectory": "apps/web/dist",
  "framework": "vite",
  "env": {
    "VITE_API_URL": "https://book-summarizer-api.onrender.com",
    "VITE_API_TIMEOUT": "120000",
    "VITE_MAX_SUMMARY_LENGTH": "1000"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://book-summarizer-api.onrender.com",
      "VITE_API_TIMEOUT": "120000",
      "VITE_MAX_SUMMARY_LENGTH": "1000"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "apps/web/src/**/*.ts": {
      "maxDuration": 30
    },
    "apps/web/src/**/*.tsx": {
      "maxDuration": 30
    }
  }
}
